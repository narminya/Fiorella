@model ProductViewModel
@{
    ViewData["Title"] = "Index";
}

<main>
    <section id="product-list-title">
        <div class="container py-4">
            <div class="row py-5">
                <div class="col-12">
                    <input type="hidden" id="skipCount" value="4" style="visibility:hidden" />
                    <h1>Product List</h1>
                    <i class="text-muted">Where flowers are our inspiration</i>
                </div>
            </div>
        </div>
    </section>
    <section id="product">
        <div class="container">
            <div class="row" id="products-container">
                @await Component.InvokeAsync("Product")
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-primary" id="loadmore"></button>
            </div>
        </div>
    </section>
</main>

