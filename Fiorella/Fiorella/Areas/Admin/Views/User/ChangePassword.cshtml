@model ChangePasswordViewModel;
@{
    ViewData["Title"] = "ChangePassword";
}

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Default form</h4>
                <div asp-validation-summary="ModelOnly"></div>
                <form class="forms-sample" method="post">

                    <div class="form-group">
                        <label asp-for="Username">Name</label>
                        <input class="form-control" asp-for="Username" id="exampleInputUsername1" placeholder="Username">
                        <span asp-validation-for="Username"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OldPassword">Description</label>
                        <input class="form-control" asp-for="OldPassword" id="editor" placeholder="OldPassword">
                        <span asp-validation-for="OldPassword"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassword">Description</label>
                        <input class="form-control" asp-for="NewPassword" id="editor" placeholder="NewPassword">
                        <span asp-validation-for="NewPassword"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword">Description</label>
                        <input class="form-control" asp-for="ConfirmPassword" id="editor" placeholder="ConfirmPassword">
                        <span asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Submit</button>

                </form>
            </div>
        </div>
    </div>
</div>

@section script {
    <partial name="_ValidatePartial" />

}

