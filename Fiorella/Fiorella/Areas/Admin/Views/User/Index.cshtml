@model List<UserViewModel>
@{
    ViewData["Title"] = "User";
}

<div class="content-wrapper">
    <div class="form-group">
        <input class="form-control" id="categorySearch" placeholder="Search for category" />
    </div>
    <div class="result">

    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@ViewData["Title"]</h4>

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Full name</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Actions</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.FullName</td>
                                        <td>@item.Email</td>
                                        <td>@item.Role</td>
                                        <td class="d-flex justify-content-around">
                                            <a class="btn btn-primary" asp-controller="User" asp-action="AddRole" asp-route-id="@item.Id">Choose role</a>
                                         
                                            <a class="btn btn-primary" asp-controller="User" asp-action="ChangePassword" asp-route-id="@item.Id">Change password</a>
                                            <a class="btn btn-primary" asp-controller="User" asp-action="detail" asp-route-id="@item.Id">Deactivate</a>

                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section script{



 }