@model List<LayoutInfo>
@{
    ViewData["Title"] = "Index";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@ViewData["Title"]</h4>

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.LinkedId</td>
                                    <td>@item.Facebook</td>
                                    <td><img src="~/img/@item.Logo"/></td>

                                    <td class="d-flex justify-content-around">
                                        <a class="btn btn-primary" asp-controller="Layout" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                                        <a class="btn btn-warning" asp-controller="Layout" asp-action="Edit" asp-route-id="@item.Id">Update</a>
                                        <a class="btn btn-danger" asp-controller="Layout" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                                }



                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>