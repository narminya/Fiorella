@model Category
@{
    ViewData["Title"] = "Detail";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@Model.Id @Model.Name</h4>
                <p>
                    @Html.Raw(Model.Description)
                </p>
            </div>
        </div>
    </div>
</div>
