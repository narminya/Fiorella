@model SliderViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@ViewData["Title"]</h4>

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><img src="~/img/@Model.Slider.Signature"/></td>
                                    <td>@Model.Slider.Title</td>
                                    <td>@Html.Raw(Model.Slider.Desc)</td>
                                    <td>
                                        @foreach (var item in Model.Images)
                                        {
                                            <img src="~/img/@item.Image" />
                                        }
                                    </td>
                                    <td class="d-flex justify-content-around">
                                        <a class="btn btn-primary" asp-controller="Category" asp-action="detail" asp-route-id="@Model.Id">Detail</a>
                                        <a class="btn btn-warning" asp-controller="Category" asp-action="update" asp-route-id="@Model.Id">Update</a>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


