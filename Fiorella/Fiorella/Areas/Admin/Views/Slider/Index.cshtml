@model List<SliderImage>
@{
    ViewData["Title"] = "Slider";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@ViewData["Title"]</h4>

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><img src="~/img/@item.Image"/></td>
                                        <td class="d-flex justify-content-around">
                                            <a class="btn btn-primary" asp-controller="Slider" asp-action="detail" asp-route-id="@item.Id">Detail</a>
                                            <a class="btn btn-warning" asp-controller="Slider" asp-action="update" asp-route-id="@item.Id">Update</a>
                                            <form method="post" asp-action="delete" asp-route-id="@item.Id">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section script {
    <partial name="_ValidatePartial" />
}

